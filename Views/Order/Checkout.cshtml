@model ShoppingCartViewModel



<div class="container-fluid">
    <form asp-action="Checkout" method="post" class="form-horizontal" role="form">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Billing Address</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="order.FirstName"></label>
                            <input asp-for="order.FirstName" class="form-control" />
                            <span asp-validation-for="order.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="order.LastName"></label>
                            <input asp-for="order.LastName" class="form-control" />
                            <span asp-validation-for="order.LastName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="order.AddressLine1"></label>
                            <input asp-for="order.AddressLine1" class="form-control" />
                            <span asp-validation-for="order.AddressLine1" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="order.State"></label>
                            <input asp-for="order.State" class="form-control" />
                            <span asp-validation-for="order.State" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="order.Country"></label>
                            <input asp-for="order.Country" class="form-control" />
                            <span asp-validation-for="order.Country" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="order.PhoneNumber"></label>
                            <input asp-for="order.PhoneNumber" class="form-control" />
                            <span asp-validation-for="order.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="order.Email"></label>
                            <input asp-for="order.Email" class="form-control" />
                            <span asp-validation-for="order.Email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            
            </div>
            <div class="col-lg-4">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Order Total</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="border-bottom">
                        <h6 class="mb-3">Products</h6>
                    
                        @foreach(var item in Model.CartItems)
                        {
                            <div class="d-flex justify-content-between">
                                <p>@item.product.Name</p>
                                <p>@item.product.Price</p>
                            </div>
                        }
                    </div>
                    <div class="border-bottom pt-3 pb-2">
                        <div class="d-flex justify-content-between">
                            <h6 class="font-weight-medium">Shipping</h6>
                            <h6 class="font-weight-medium">$10</h6>
                        </div>
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Total</h5>
                            <h5>@Model.order.OrderTotal</h5>
                        </div>
                    </div>
                </div>
                <div class="mb-5">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Payment</span></h5>
                    <div class="bg-light p-30">
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="cash">
                                <label class="custom-control-label" for="cash">Cash</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="visa">
                                <label class="custom-control-label" for="visa">Visa</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="custom-control custom-radio">
                                <input type="radio" class="custom-control-input" name="payment" id="mastercard">
                                <label class="custom-control-label" for="mastercard">MasterCard</label>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-block btn-primary font-weight-bold py-3">Confirm Order Checkout</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>