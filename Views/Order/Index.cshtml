@model ShoppingCartViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link href="~/css/datatables.css" rel="stylesheet" />
</head>

<div class="container-fluid pt-5">


    <h4 style="margin-top:20px;"> Orders</h4>
    <table class="table table-bordered table-hover text-center bg-light" id="myTable">
        <thead class="thead-dark">
            <tr>
                <th>@Html.Label("OrderID") </th>
                <th>@Html.Label("First Name")</th>
                <th>@Html.Label("Last Name")</th>
                <th>@Html.Label("Email")</th>
                <th>@Html.Label("PhoneNumber")</th>
                <th>@Html.Label("Country")</th>
                <th>@Html.Label("State")</th>
                <th>@Html.Label("AddressLine1")</th>
                <th>@Html.Label("OrderTotal")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderList)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.OrderId)</td>
                    <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                    <td>@item.Email</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    <td>@Html.DisplayFor(modelItem => item.Country)</td>
                    <td>@Html.DisplayFor(modelItem => item.State)</td>
                    <td>@Html.DisplayFor(modelItem => item.AddressLine1)</td>
                    <td>@Html.DisplayFor(modelItem => item.OrderTotal)</td>
                </tr>
            }
        </tbody>
    </table>


    <h4 style="margin-top:50px;"> Order Details </h4>
    <table class="table table-bordered table-hover bg-light text-center" id="myTable2">
        <thead class="thead-dark">
            <tr>
                <th>@Html.Label("Product Name")</th>
                <th>@Html.Label("Amount")</th>
                <th>@Html.Label("Unit Price")</th>
                <th>@Html.Label("Sub Total")</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderDetails)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.product.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>@(item.Price * @item.Amount)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
@section scripts {


    <script src="~/js/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();


        });
    </script>


}