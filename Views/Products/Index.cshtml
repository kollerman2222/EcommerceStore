@model IEnumerable<ProductsViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>
    <link href="~/css/datatables.css" rel="stylesheet" />
</head>


<div class="container-fluid pt-5">
    <a class="btn btn-primary mb-3" asp-action="Create">Create New</a>

    <table class="table table-bordered table-hover bg-light" id="myTable">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.Label("Product Image")
                </th>
                <th>
                    @Html.Label("Product Name")
                </th>
                <th>
                    @Html.Label("Product Brand")
                </th>
                <th>
                    @Html.Label("Product Price")
                </th>
                <th>
                    @Html.Label("Date Added")
                </th>
                <th>
                    @Html.Label("Stock Status")
                </th>
                <th>
                    @Html.Label("Department Name")
                </th>
                <th>
                    @Html.Label("Category Name")
                </th>
                <th>
                    @Html.Label("Action Links")

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="~/Uploads/products/@item.ProductImage" style="width:50px;" class="img-thumbnail" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Brand)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AddedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InStock)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                    </td>
                    <td>
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        <a class="btn btn-outline-primary" asp-action="productdetailstest" asp-route-id="@item.Id">Details</a>
                        <a class="btn btn-outline-primary" asp-action="AddToShoppingCart" asp-controller="ShoppingCart" asp-route-id="@item.Id">Add to Cart</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-primary" asp-action="HomePage" asp-controller="Home"> Return to HomePage </a>
</div>

@section scripts{


    <script src="~/js/datatables.min.js"></script>

    <script>
            $(document).ready(function () {
                $('#myTable').DataTable();


            });
    </script>


}