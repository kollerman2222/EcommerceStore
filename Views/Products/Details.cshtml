<div class="container-fluid pb-5">
    <div class="row px-xl-5">
        <div class="col-lg-5 mb-30">
            <div id="product-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner bg-light">
                  
                    <div class="carousel-item active">
                        @{
                            string image = Model.ProductImage;

                            string extension = System.IO.Path.GetExtension(image);

                            string[] commonImageExtensions = { ".jpg", ".png", ".PNG", "JPG", ".gif" };

                            if (!commonImageExtensions.Contains(extension))
                            {

                                <img src="~/Uploads/imageedit_2_9148508652.png" style=" width:100%; height: 600px; object-fit: cover; " alt="Image" />

                            }
                            else
                            {
                                <img src="~/Uploads/@Model.ProductImage" style=" width:100%; height: 600px; object-fit: cover; " alt="Image" />

                            }
                        }



                        @*<img src="~/Uploads/@Model.Producttt.ProductImage" style=" width:100%; height: 600px; object-fit: cover; " alt="Image" />*@

                    </div>

                    @foreach (var item in Model.ProductGallery)
                    {
                        <div class="carousel-item ">

                            <img src="~/Uploads/@item.ImageURL" style=" width: 100%; height: 600px; object-fit: cover;" alt="Image" />


                        </div>
                    }
                </div>

                <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                    <i class="fa fa-4x fa-angle-left text-dark"></i>
                </a>
                <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                    <i class="fa fa-4x fa-angle-right text-dark"></i>


                </a>
            </div>
        </div>

        <div class="col-lg-7 h-auto mb-30">
            <div class="h-100 bg-light p-30">
                <h3>@Model.Name</h3>

                <h4 class="font-weight-semi-bold mb-4">@Model.Price</h4>
                <p class="mb-4">
                    we can put anything here
                </p>
                <div class="d-flex mb-3">
                    <strong class="text-dark mr-3">Brand:</strong>
                    <label>@Model.Brand</label>
                </div>
                <div class="d-flex align-items-center mb-4 pt-2">
                    <a class="btn btn-primary" asp-action="AddToShoppingCart" asp-controller="ShoppingCart" asp-route-id="@Model.Id">Add to Cart</a>
                </div>
                <div class="d-flex pt-2">
                    <strong class="text-dark mr-2">Share on:</strong>
                    <div class="d-inline-flex">
                        <a class="text-dark px-2" href="">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a class="text-dark px-2" href="">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a class="text-dark px-2" href="">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a class="text-dark px-2" href="">
                            <i class="fab fa-pinterest"></i>
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="bg-light p-30">
                <div class="nav nav-tabs mb-4">
                    <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Description</a>
                    <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Specification</a>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab-pane-1">
                        <h4 class="mb-3">Product Description</h4>
                        <p>@Model.Description</p>
                    </div>
                    <div class="tab-pane fade" id="tab-pane-2">
                        <h4 class="mb-3">Product Specifications</h4>
                        <p>@Model.Specification</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container-fluid py-5">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">You May Also Like</span></h2>
    <div class="row px-xl-5">
        <div class="col">
            <div class="owl-carousel related-carousel">
                @foreach (var item in Model.ProductAlot)
                {
                    <div class="product-item bg-light">
                        <div class="product-img position-relative overflow-hidden">
                            <img class="img-fluid w-100" src="~/Uploads/@item.ProductImage" alt="">
                            <div class="product-action">
                                <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-shopping-cart"></i></a>
                                <a class="btn btn-outline-dark btn-square" href=""><i class="far fa-heart"></i></a>
                                <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-sync-alt"></i></a>
                                <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-search"></i></a>
                            </div>
                        </div>
                        <div class="text-center py-4">
                            <a class="h6 text-decoration-none text-truncate" href="">@item.Name</a>
                            <div class="d-flex align-items-center justify-content-center mt-2">
                                <h5>$123.00</h5><h6 class="text-muted ml-2"><del>@item.Price</del></h6>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

