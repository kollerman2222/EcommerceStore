@model ProductsViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this Product?</h3>
<div class="container-fluid pt-5">

    <table class="table table-bordered table-hover bg-light" id="myTable">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.Label("Product Image")
                </th>
                <th>
                    @Html.Label("Product Name")
                </th>
                <th>
                    @Html.Label("Product Brand")
                </th>
                <th>
                    @Html.Label("Product Price")
                </th>
                <th>
                    @Html.Label("Date Added")
                </th>
                <th>
                    @Html.Label("Stock Status")
                </th>
                <th>
                    @Html.Label("Department Name")
                </th>
                <th>
                    @Html.Label("Category Name")
                </th>
                <th>
                    @Html.Label("Action Links")

                </th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>
                    <img src="~/Uploads/@Model.ProductImage" style="width:50px;" class="img-thumbnail" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.AddedOn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.InStock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Category.Name)
                </td>
                <td>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm Product Delete" class="btn btn-outline-danger" /> 
                    </form>
                </td>
            </tr>

        </tbody>
    </table>

   
    <a class="btn btn-primary" asp-action="Index">Back to Products List</a>
    <a class="btn btn-primary" asp-action="Details">Back to this Product Details</a>

</div>
