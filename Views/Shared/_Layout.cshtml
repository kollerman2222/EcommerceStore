        var $body = $('body');
        var $autocomplete = $('#autocomplete');
        var autocompleteFocused = false;
        var navbarHeight = $('.navbar').outerHeight();

        $autocomplete.focus(function () {
            $body.addClass('opaque');
            autocompleteFocused = true;
        });

        $autocomplete.blur(function () {
            autocompleteFocused = false;     
                $body.removeClass('opaque');      
        });

        $(document).on('mousedown', function (event) {
            var target = event.target;
            var clickedOutsideAutocomplete = !$autocomplete.is(target) && !$autocomplete.has(target).length;
            var clickedOutsideNavbar = $(target).closest('.navbar').length === 0;
            var clickedInOverflow = event.clientY > navbarHeight;

            if (clickedOutsideAutocomplete && clickedOutsideNavbar && !autocompleteFocused && clickedInOverflow) {
                $body.removeClass('opaque');
            }
        });


    </script>







