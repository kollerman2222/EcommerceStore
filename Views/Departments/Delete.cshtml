@model DepartmentsViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div class="container-fluid pt-5">

    <table class="table table-bordered table-hover bg-light" id="myTable">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.Label("Department Name")
                </th>
                <th>
                    @Html.Label("Total Number of Categories belong to this Department")
                </th>
                <th>
                    @Html.Label("Total Number of Products belong to this Department")
                </th>
                <th>@Html.Label("Action Links")</th>
            </tr>
        </thead>
        <tbody>

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Categorys.Count)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => modelItem.Productss.Count)
                </td>
                <td>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm Department Delete" class="btn btn-outline-danger" /> 
                    </form>
                </td>
            </tr>

        </tbody>
    </table>
    <a class="btn btn-primary" asp-action="Index">Return to Departments List</a>
    <a class="btn btn-primary" asp-action="Details" asp-route-id=@Model.Id>Back to this Department Details</a>

</div>
